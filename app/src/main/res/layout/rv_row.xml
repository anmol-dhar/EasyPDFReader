<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color">

    <ImageView
        android:id="@+id/pdf_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        app:srcCompat="@drawable/ic_pdf" />

    <TextView
        android:id="@+id/file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="11dp"
        android:layout_toStartOf="@+id/share_btn"
        android:layout_toEndOf="@id/pdf_image"
        android:fontFamily="@font/poppins_semibold"
        android:text="Pdf File Name"
        android:textColor="@color/white"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/file_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/file_name"
        android:layout_marginEnd="11dp"
        android:layout_toStartOf="@+id/share_btn"
        android:layout_toEndOf="@id/pdf_image"
        android:fontFamily="@font/poppins"
        android:text="/storage/0/sample/filepath.pdf"
        android:textColor="@color/white"
        android:textSize="15sp" />


    <ImageView
        android:id="@+id/share_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"
        app:srcCompat="@drawable/ic_share" />

    <View
        android:id="@+id/line_under_pdf_files"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/file_path"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:background="@color/secondary_color" />

</RelativeLayout>